@page
@model Danplanner.Client.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Users";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

<div class="d-flex" style="min-height: 80vh;">
    <div class="sidebar d-flex flex-column">
        <div class="sidebar-header">Admin Panel</div>
        <nav class="nav flex-column">
            <a class="nav-link" asp-page="/Admin/Users"><i class="bi bi-people"></i> Brugere</a>
            <a class="nav-link" asp-page="/Admin/Map"><i class="bi bi-grid-1x2"></i> Pladskort</a>
            <a class="nav-link" asp-page="/Admin/Calendar"><i class="bi bi-calendar3"></i> Kalender</a>
            <a class="nav-link" asp-page="/Admin/Log"><i class="bi bi-journal-text"></i> Logbog</a>
        </nav>
    </div>

    <!-- Grid -->
    <div class="content flex-grow-1" style="padding: 2rem;">
        <h1>Kunder</h1>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 mt-4">
            @foreach (var item in Model.GridData)
            {
                <div class="col">
                    <a asp-page="/Admin/UserDetails" asp-route-id="@item.UserId" class="text-decoration-none text-dark">
                        <div class="card h-100 shadow-sm hover-card">
                            <div class="card-body">
                                <h5 class="card-title">@item.UserEmail</h5>
                                <p class="card-text">@item.UserAdress</p>
                                <p class="card-text">@item.UserMobile</p>
                            </div>
                            <div class="card-footer text-muted">@item.UserId</div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .sidebar {
        width: 220px;
        background-color: #f8f9fa;
        border-right: 1px solid #dee2e6;
        padding: 1rem;
    }

        .sidebar .nav-link {
            color: #495057;
            font-weight: 500;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .sidebar .nav-link:hover {
                background-color: #e9ecef;
                border-radius: 5px;
                color: #0d6efd;
            }

        .sidebar .nav-item .dropdown-menu {
            background-color: #f8f9fa;
            border: none;
        }

    .sidebar-header {
        font-size: 1.25rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
    }

    .hover-card:hover {
        cursor: pointer;
        transform: scale(1.02);
        transition: 0.15s ease-in-out;
        box-shadow: 0 0 10px rgba(0,0,0,0.25);
    }
</style>
