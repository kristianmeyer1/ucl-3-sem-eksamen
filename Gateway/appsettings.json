"ReverseProxy": {
  "Routes": {
    "bookingRoute": {
      "ClusterId": "bookingCluster",
      "Match": { "Path": "/booking/{**catch-all}" },
      "Transforms": [{ "PathRemovePrefix": "/booking" }]
    },
    "notificationRoute": {
      "ClusterId": "notificationCluster",
      "Match": { "Path": "/notify/{**catch-all}" },
      "Transforms": [{ "PathRemovePrefix": "/notify" }]
    }
  },
  "Clusters": {
    "bookingCluster": {
      "Destinations": {
        "booking": { "Address": "http://host.docker.internal:5229" }
      }
    },
    "notificationCluster": {
      "Destinations": {
        "notification": { "Address": "http://notification_service:5002" }
      }
    }
  }
}
