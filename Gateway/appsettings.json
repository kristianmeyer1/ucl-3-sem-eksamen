{
  "ReverseProxy": {
    "Routes": {
      "orderNotifyRoute": {
        "ClusterId": "notificationCluster",
        "Match": { "Path": "/orderNotify" }
      },
      "paymentNotifyRoute": {
        "ClusterId": "notificationCluster",
        "Match": { "Path": "/paymentNotify" }
      }
    },
    "Clusters": {
      "bookingCluster": {
        "Destinations": {
          "booking": { "Address": "http://host.docker.internal:5229" }
        }
      },
      "notificationCluster": {
        "Destinations": {
          "notification": { "Address": "http://notification_service:5002" }
        }
      }
    }
  }
}
